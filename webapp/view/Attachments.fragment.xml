<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table items="{ path: 'Data>AttachmentSet' }">
		<headerToolbar>
			<OverflowToolbar >
				<ToolbarSpacer/>
			</OverflowToolbar>
		</headerToolbar>	
		<items>
			<ColumnListItem type="Active">
				<cells>
					<Text text="{Data>Title}"/>
					<Text text="{Data>CrUser}" />
					<Text text="{ path: 'Data>CrDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short', pattern: 'dd.MM.yyyy' } }"/>
					<Text text="{ path: 'Data>CrTime', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'HH:mm:ss' } }"/>
					<Button icon="sap-icon://detail-view" press="onAttachmentPress" />
				</cells>
			</ColumnListItem>
		</items>
		<columns>
			<Column>
				<header>
					<Label text="{i18n>Soubor}"/>
				</header>			
			</Column>
			<Column>
				<header>
					<Label text="{i18n>Osoba}"/>
				</header>			
			</Column>			
			<Column width="6rem">
				<header>
					<Label text="{i18n>Datum}"/>
				</header>
			</Column>
			<Column width="6rem">
				<header>
					<Label text="{i18n>Cas}"/>
				</header>
			</Column>
			<Column width="4rem">
			</Column>			
		</columns>
	</Table>
</core:FragmentDefinition>