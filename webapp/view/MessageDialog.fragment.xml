<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<Dialog resizable="true" contentWidth="60%" showHeader="true" title="{MessageModel>/title}" draggable="true">
		<Table growing="false" id="idMessageDialog" sticky="ColumnHeaders" items="{MessageModel>/messages}">

			<items>
				<ColumnListItem type="Active" id="messageDialogItem">
					<cells>
						<ObjectStatus icon="{path: 'MessageModel>Type', formatter: '.formatter.formatMessageIcon'}" state="{path: 'MessageModel>Type', formatter: '.formatter.formatMessageStatus'}"/>
						<Text text="{MessageModel>Message}" />
					</cells>
				</ColumnListItem>
			</items>
			<columns>
				<Column width="2em">
					<header>
					<!--	<Label text=""/> -->
					</header>
				</Column>
				<Column>
					<header>
					<!--	<Label text="{i18n>Zpráva}"/>  -->
					</header>
				</Column>
			</columns>
		</Table>
		<buttons>
			<Button text="{i18n>Pokračovat}" visible="{parts: [ 'MessageModel>/hasError', 'MessageModel>/hideContinue' ], formatter: '.formatter.showMessagesContinueButton'}" press=".onConfirm" />
			<Button text="{i18n>Zavřít}" press=".onClose" />
		</buttons>
	</Dialog>

</core:FragmentDefinition>