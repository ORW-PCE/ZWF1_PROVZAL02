<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<!-- <TableSelectDialog contentWidth="60%" resizable="true" growing="true" growingThreshold="99" id="idSelectSimpleDialog" title="{/title}" search=".onSearch" confirm=".onClose" cancel=".onClose" multiSelect="true">

		
	</TableSelectDialog>
	-->


	<Dialog resizable="true" contentWidth="60%" 
			contentHeight="80%" showHeader="true" 
			verticalScrolling="false" 
			horizontalScrolling="false" 
			title="{dialogModel>/title}">
		<content>
			<VBox id='idSelectTableODataSel'>
				<SearchField search=".onSearch"/>
			</VBox>
			<ScrollContainer vertical="true" horizontal="false" width="100%" height="95%" id="idSelectTableODataScroll">
				<Table growing="true" 
						growingScrollToLoad="true" id="idSelectTableODataTable" 
						growingThreshold="99"						
						sticky="HeaderToolbar,ColumnHeaders" 
						itemPress=".onClose" 
						mode="{= !!${dialogModel>/multiselect} ? 'MultiSelect' : 'None' }">

				</Table>
			</ScrollContainer>
			<Label/>
		</content>
		<buttons>
			<Button text="{i18n>Vybrat}" press=".onClose" type="Emphasized" visible="{dialogModel>/multiselect}"/>
			<Button text="{i18n>Zavřít}" press=".onClose" />
		</buttons>
	</Dialog>

</core:FragmentDefinition>